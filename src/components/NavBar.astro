---
import ThemeToggle from "./ThemeToggle.astro";
import BackButton from "./BackButton.astro";
import { Separator } from "./ui/separator.tsx";

const { title } = Astro.props;
const { button } = Astro.props;
---

<nav class="flex flex-col w-full">
  <div class="flex items-center justify-between px-6 py-1">
    <BackButton text={button} />
    <p class="text-m text-[#9777D0] font-bold font-mono">
      <span class="!text-[#99C766]">~</span>/{title}
    </p>
    <ThemeToggle client:load />
  </div>

  <Separator className="w-full" />
</nav>
