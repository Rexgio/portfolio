<Layout>
  <div class="h-screen w-full flex flex-col overflow-hidden">
    <header class="w-full z-10 bg-inherit flex-shrink-0">
      <NavBar title="portfolio/blog" button="home" />
    </header>

    <main class="flex-1 w-full flex flex-col items-center px-4 overflow-hidden">
      <div class="w-full h-full flex flex-col items-center justify-center">
        <pre
